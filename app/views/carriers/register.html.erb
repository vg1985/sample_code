<% provide(:title, 'Carrier Registration') %>

<%=content_for :breadcrumb do%>
<li>
	Register As Carrier
</li>
<%end%>

<%= content_for :javascripts do %>
	<%= javascript_include_tag 'carriers'%>
<%end%>

<%=content_for :js_init do %>
	App.RegisterCarrierFormsHandler.init();
	App.RegisterCarrierFormsHandler.setDirtyValues([null, null, null, null]);
<%end%>

<div class="col-md-12">
	<div class="panel panel-default">
		<div class="panel-body panel-body-nopadding">
			<div id="newCarrierWizard" class="basic-wizard">
				<ul class="nav nav-pills nav-justified nav-disabled-click">
					<li>
						<a href="#ptab1" data-toggle="tab"><span>Step 1:</span> Login Credentials</a>
					</li>
					<li>
						<a href="#ptab2" data-toggle="tab"><span>Step 2:</span> Billing Information</a>
					</li>
					<li>
						<a href="#ptab3" data-toggle="tab"><span>Step 3:</span> Carrier Contacts</a>
					</li>
					<li>
						<a href="#ptab4" data-toggle="tab"><span>Step 4:</span> Terms &amp; Conditions</a>
					</li>
				</ul>

				<%= render partial: 'form', locals: { url: do_register_carriers_path } %>
			</div>
		</div>
	</div>
</div>

<%=render partial: 'shared/otp_auth', locals: {type: 'umobem'}%>