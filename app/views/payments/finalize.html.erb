<% provide(:title, 'Finance - Payment Confirmation') %>

<%= form_tag "#", { method: :post, html: {class: "form-horizontal"}} do %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <%= "Confirm Payment" %>
      </h4>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label class="col-sm-2 control-label">Payment Type</label>
        <div class="col-sm-4">
          <%= @payment.payment_type.camelize %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Amount:</label>
        <div class="col-sm-4">
          <%= "$ #{@payment.amount}" %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Description:</label>
        <div class="col-sm-4">
          <%= @payment.description %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-4">
          <div class="pull-right">
            <%= link_to "Cancel", revoke_payment_path(@payment, token: @payment.transaction_token), method: :get, class: "btn btn-warning" %>
            <%= link_to "Confirm", confirm_payment_path(@payment, token: @payment.transaction_token), method: :put, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>