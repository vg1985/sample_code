<% provide(:title, 'Reset Password') %>

<%=content_for :javascripts do %>
  <%= javascript_include_tag 'carriers'%>
<%end%>

<%=content_for :js_init do %>
  App.CarrierForgotPassHandler.init();
<%end%>
<style>
  label.error {
    display:block;
  }
</style>
<div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, id: 'forgotPassCarrierForm' }) do |f| %>    
        <%
            messages = resource.errors.full_messages.to_sentence
        %>
        <%if messages.present?%>
            <div class="error">Error: <%=messages%></div>
        <%end%>
        

      <h4 class="nomargin">Reset Password</h4>
      <p class="mt5 mb20"></p>

      <div class="form-group">
      	<%= f.label :email, 'Email' %><br />
        <%= f.email_field :email, class: 'form-control', autofocus: true %>
      </div>
    
      <div class="form-group">
        <%= f.submit 'Send me reset password instructions', class: 'btn btn-success btn-block' %>
      	<small><%= link_to 'Login', new_user_session_path %><br /></small>
      </div>
    <% end %>
     
</div>

