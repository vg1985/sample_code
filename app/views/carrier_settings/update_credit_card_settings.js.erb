var gritter_opts = {
	title: 'Credit Card Settings',
	sticky: false,
	time: '5000'
};

<%if @credit_card_setting.present? %>
	<%unless @validation_error%>
		/*jQuery("span.bw_settings_form_msg").removeClass('text-muted text-danger').addClass('text-success').html('Bandwidth API settings updated successfully.');*/
		gritter_opts.text = "Credit Card settings have been updated.";
		gritter_opts.class_name = 'growl-success';
		
	<%else%>
		gritter_opts.text = "The data seems to be invalid. Failed to update the Credit Card settings.";
		gritter_opts.class_name = 'growl-danger';
	<%end%>
<%else%>
		gritter_opts.text = "This seems to be a invalid request. Aborting now.";
		gritter_opts.class_name = 'growl-danger';
<%end%>	

jQuery("span.automatic_recharge_settings_form_msg, span.low_credit_notification_settings_form_msg").html('');
jQuery.gritter.add(gritter_opts);